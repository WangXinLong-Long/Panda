    <!-- 填充色 -->
    <solid android:color="@color/color_gray" />

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp" />
    <!-- 边框 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/color_gray" />
    <!-- 边框 -->
    <padding
        android:bottom="5dp"
        android:left="8dp"
        android:right="8dp"
        android:top="5dp" />

</shape>