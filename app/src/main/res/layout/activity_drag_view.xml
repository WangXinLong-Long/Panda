<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panda.mvp.ui.test.DragViewActivity">

    <com.panda.weight.DragViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/red"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/color_task_top_textcolor_red"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/yellow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/color_task_top_textcolor_yellow"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/green"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end|bottom"
            android:background="@color/color_task_green"
            android:text="@string/app_name" />
    </com.panda.weight.DragViewGroup>
</android.support.constraint.ConstraintLayout>
